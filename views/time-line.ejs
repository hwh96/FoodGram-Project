<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Time Line</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <style>
        img{
            height: 300px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <%- include ('./partial/navbar.ejs') %>
    <h1>Your TimeLine</h1>
    <ul id="navbar" class="navbar d-flex">
        <li><a href="/profile/<%= post[0].UserId %>">User Profile</a></li>
    </ul>

    <div class="container d-flex flex-wrap justify-content-center">
        <% post.forEach(el=> { %>
        <div class="card mb-3 ms-3 me-3" style="width: 18rem;">
            <img src="<%= el.imageUrl %>" class="card-img-top" alt="...">
            <div class="card-body">
                <p class="card-text"><%=el.description%></p>
            </div>
            <div>
                <span><a href="/deletePost/<%= el.id %>">Delete</a></span>
                <span><a href="">Edit</a></span>
            </div>
        </div>
        <%}) %>
    </div>
</body>

</html>